package main

import (
	"fmt"
)

func main() {
	Conjunto := []int{}
	var n, x, soma int

	fmt.Println("Qual o tamanho do slice? ")
	fmt.Scan(&n)

	for i := 0; i < n; i++ {
		fmt.Println("Qual valor você quer colocar nessa posição? ")
		fmt.Scan(&x)
		Conjunto = append(Conjunto, x)
		soma += Conjunto[i]
	}
	fmt.Println(Conjunto, soma)
}
