package main

import "fmt"

func main() {
	var Slice []int
	var tamanho, b, soma int
	fmt.Println("Informe o tamanho do slice: ")
	fmt.Scan(&tamanho)

	for {
		if len(Slice) == tamanho {
			break
		}
		fmt.Println("Adicione um valor a seu slice ")
		fmt.Scan(&b)
		Slice = append(Slice, b)
	}
	fmt.Println("Seu slice é ", Slice)
	soma = 0
	for _, numeros := range Slice {
		soma += numeros
	}
	fmt.Println("E a soma é", soma)

}
